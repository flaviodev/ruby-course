<%= link_to("<< Back to List", subjects_path, :class => 'back-link') %>

<div class="subjects show">
  <h2>Show Subject</h2>

  <%= link_to("Edit", edit_subject_path(@subject), :class => 'action edit') %> | <%= link_to("Delete", delete_subject_path(@subject), :class => 'action delete') %>
  <table summary="Subject detail view">
    <tr>
      <th>Id</th>
      <td><%= @subject.id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @subject.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @subject.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @subject.visible ? 'Yes' : 'No' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @subject.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @subject.updated_at %></td>
    </tr>
  </table>

</div>
